<div class="col-md-4 mx-auto">
    <h2>Nuevo Libro</h2>
    <form action="/add" method="post">
        <div class="form-group">
            <label>Titulo</label>
            <input type="text" name="title" class="form-control" placeholder="Titulo">
        </div>
        <div class="form-group">
            <label>Autor</label>
            <input type="text" name="author" class="form-control" placeholder="Autor">
        </div>
        <div class="form-group">
            <label>Editorial</label>
            <input type="text" name="editorial" class="form-control" placeholder="Editorial">
        </div>
        <div class="form-group">
            <label>General</label>
            <input type="text" name="general" class="form-control" placeholder="General">
        </div>
         <div class="form-group">
            <label>Precio</label>
            <input type="text" name="price" class="form-control" placeholder="Precio" >
        </div>
         <div class="form-group">
            <label>Numero de Ejemplares</label>
            <input type="text" name="quantity" class="form-control" placeholder="Cantidad" >
        </div>
        <div class="form-group">
            <label>Numero de Paginas</label>
            <input type="text" name="pagesNumber" class="form-control" placeholder="Numero de Paginas">
        </div>
        <div class="form-group">
            <label>Año de Creacion</label>
            <input type="text" name="yearCreation" class="form-control" placeholder="Año de creacion">
        </div>
        <div class="form-group">
            <label>Resumen</label>
            <textarea name="resume" class="form-control" placeholder="Resumen"></textarea>
        </div>
        <div class="form-group">
            <label>Examen</label>
            <textarea name="examen" class="form-control" placeholder="Examen"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Añadir</button>
    </form>
</div>